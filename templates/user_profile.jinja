{% extends 'base.jinja' %}

{% block content %}
<style>
    html, body {
        margin: 0;  /* Remove default margin */
        padding: 0; /* Ensure no padding is applied */
        width: 100%; /* Ensure full width */
        height: 100%; /* Use full height of the window */
        display: flex;  /* Enable Flexbox */
        flex-direction: column;  /* Align children vertically */
        justify-content: center;  /* Center horizontally */
        align-items: center;  /* Center vertically */
        font-family: 'Open Sans', sans-serif;
        background-color: #A8D0E6;  /* Light blue background */
    }

    h1 {
        text-align: center;  /* Center the heading text horizontally */
        font-family: 'Open Sans', sans-serif;
        background-image: url('/static/js/libs/image.png'); /* Ensure correct path to image */
        background-repeat: no-repeat; /* Prevent the image from repeating */
        background-size: contain; /* Fixed size for the background image */
        background-position: center; /* Center the background image */
        color: #F76C6c; /* Ensure text is readable on background */
        padding: 20px 40px; /* Add padding to make the text more prominent */
        border-radius: 10px; /* Rounded corners for aesthetic */
        width: 300px; /* Set a fixed width for the h1 element */
        height: 150px; /* Set a fixed height to encapsulate the background properly */
        display: flex; /* Use Flexbox inside h1 */
        align-items: center; /* Center text vertically */
        justify-content: center; /* Center text horizontally */
    }
    p {
        text-align: center;  /* Center paragraph text */
        font-family: 'Open Sans', sans-serif;
        color: white; /* Ensure text is readable on background */
        font-size: 20px;
        font-weight: bold;  /* Make text bold */
    }
    nav button {
        font-family: 'Open Sans', sans-serif;
        padding: 5px 10px;
        background-color: white; 
        color: black;
        border: none;
        border-radius: 2px;
        cursor: pointer;
        text-align: center;
        text-decoration: none;
        display: inline-block;
        margin-right: 10px;  
        font-size: 15px;
        transition: background-color 0.3s, color 0.3s;
    }

    nav button:hover {
        background-color: #dddbcf; /* Darker blue on hover */
    }

    nav ul li.username {
        font-family: 'Open Sans', sans-serif;
        color: black;  /* Make the username color stand out */
        font-weight: bold;  /* Bold font for emphasis */
        margin-right: 10px; 
    }

    .header {
        position: absolute; /* Position it relative to the nearest positioned ancestor */
        top: 0; /* Align to the top of the page */
        right: 0; /* Align to the right of the page */
        display: flex;
        justify-content: flex-end; /* Align buttons to the right */
        width: 100%; /* Span the full width to cover across the top */
        padding: 10px 20px; /* Padding to avoid sticking to the edges */
        background-color: ##A8D0E6; /* Optional: background color for the header */
    }

    .buttons {
        display: flex;  /* Flexbox for the buttons so they stay inline */
        justify-content: flex-end;  /* Align buttons to the right */
    }

    button {
        font-family: 'Open Sans', sans-serif;
        padding: 5px 10px;
        background-color: white; 
        color: black;
        border: none;
        cursor: pointer;
        text-align: center;
        text-decoration: none;
        display: inline-block;
        margin-right: 10px;  
        font-size: 15px;
        transition: background-color 0.3s, color 0.3s;
    }

    button:hover {
        background-color: #dddbcf; /* Darker blue on hover */
    }
</style>
<div class="header">
    <div class="buttons">
        <button onclick="location.href='{{ url_for('home') }}'">Home</button>
        <button onclick="confirmLogout()">Log Out</button>
    </div>
</div>
<div class="user-profile">
    <h1>User Profile</h1>
    <p><strong>Username:</strong> {{ user.username }}</p>
    <p><strong>Role:</strong> {{ user.role.value }}</p>
</div>


<script>
function confirmLogout() {
    if (confirm('Are you sure you want to log out?')) {
        location.href = '{{ url_for('logout') }}';
    }
}
</script>



{% endblock %}
